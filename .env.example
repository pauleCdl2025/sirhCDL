# Configuration de l'environnement pour le système SIRH

# Configuration du serveur
PORT=5000
NODE_ENV=development

# Configuration de la base de données PostgreSQL
DB_USER=postgres
DB_HOST=localhost
DB_NAME=rh_portal
DB_PASSWORD=your-database-password
DB_PORT=5432

# Configuration des emails pour la réinitialisation de mot de passe
# Pour Gmail, utilisez un 'App Password' (pas votre mot de passe normal)
# Guide: https://support.google.com/accounts/answer/185833
SMTP_SERVICE=gmail
SMTP_USER=votre-email@gmail.com
SMTP_PASS=votre-mot-de-passe-app

# Configuration de sécurité
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=24h

# Configuration CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Configuration des sessions
SESSION_SECRET=your-session-secret-here-change-in-production
SESSION_MAX_AGE=86400000

# Configuration ElevenLabs (pour l'assistant vocal)
REACT_APP_ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Configuration WebSocket
FRONTEND_URL=http://localhost:3000
